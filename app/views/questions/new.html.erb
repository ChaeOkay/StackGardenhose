<h1>Submit a Question</h1>

<%= form_for @question do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %><br>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Question" %>
<% end %>

<% if flash[:error] %>
  <div id="errorExplanation">
  <h2><%= pluralize(flash[:error].count, "error") %>
    prohibited this question from being saved:</h2>
    <ul>
      <% flash[:error].full_messages.each do |msg| %>
        <li><%= msg %></li><br />
      <% end %>
    </ul>
  </div>
<% end %>


<%= link_to "Back to Home!", questions_path %>
